{
  "manifest_version": 2,
  "name": "dq10-oohiroba",
  "version": "0.0.1",
  "description": "ドラゴンクエストX 目覚めし冒険者の広場 非公式拡張",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png"
  },
  "content_scripts": [
    {
      "js": ["src/content/sc/sc.js"],
      "matches": ["https://hiroba.dqx.jp/sc/*"]
    },
    {
      "js": ["src/content/oo/oo.js"],
      "matches": ["https://hiroba.dqx.jp/oo", "https://hiroba.dqx.jp/oo/*"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["<all_urls>"],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "大広場",
    "default_popup": "src/popup/popup.html"
  }
}
